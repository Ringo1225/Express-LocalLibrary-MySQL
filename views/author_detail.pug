extends layout

block content

  h1 Author: #{author.family_name}, #{author.first_name}
  - const date_of_birth_formatted = author.date_of_birth ? new Date(author.date_of_birth).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) : ""
  - const date_of_death_formatted = author.date_of_death ? new Date(author.date_of_death).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) : ""
  p #{date_of_birth_formatted} - #{date_of_death_formatted}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in author_books
        dt
          a(href="/catalog/book/" + book.id) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.

      hr
      p
        a(href="/catalog/author/" + author.id+'/delete') Delete author
      p
        a(href="/catalog/author/" + author.id+'/update') Update author

